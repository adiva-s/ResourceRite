<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{#if product._id}}Edit{{else}}New{{/if}} Listing</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap');

    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f0f0f0;
      margin: 0;
      padding: 0;
    }

    .container {
      width: 80%;
      margin: 40px auto;
      padding: 20px;
    }

    h2 {
      text-align: center;
      font-size: 2em;
      margin-bottom: 20px;
    }

    .form-section {
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    label {
      display: block;
      margin-bottom: 5px;
      font-weight: 500;
    }

    input,
    textarea {
      width: 95%;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-family: 'Poppins', sans-serif;
    }

    textarea {
      resize: vertical;
      min-height: 80px;
    }

    .btn-group {
      display: flex;
      gap: 10px;
      margin-top: 10px;
    }

    button,
    .btn-secondary {
      font-family: 'Poppins', sans-serif;
      padding: 10px 20px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-weight: 500;
      text-decoration: none;
      display: inline-block;
    }

    button[type="submit"] {
      background-color: #2a6fd7;
      color: white;
    }

    .btn-secondary {
      background-color: #888;
      color: white;
    }

    .btn-back {
      margin-top: 20px;
      display: inline-block;
    }

    .btn-back button {
      background-color: #2a6fd7;
      color: white;
      padding: 8px 16px;
      border: none;
      border-radius: 6px;
      font-family: 'Poppins', sans-serif;
      cursor: pointer;
    }

    .btn-back button:hover {
      background-color: #1f57b2;
    }

  </style>
</head>
<body>
  <div class="container">
    <h2>{{#if product._id}}Edit{{else}}New{{/if}} Listing</h2>

    <div class="form-section">
      <form action="{{action}}" method="{{method}}">
        <div>
          <label for="name">Title</label>
          <input name="name" id="name" required value="{{product.name}}">
        </div>

        <div>
          <label for="description">Description</label>
          <textarea name="description" id="description">{{product.description}}</textarea>
        </div>

        <div>
          <label for="category">Category</label>
          <select name="category" id="category" required>
            <option value="">-- Select a Category --</option>
            <option value="Books" {{#if (eq product.category "Books")}}selected{{/if}}>Books</option>
            <option value="Electronics" {{#if (eq product.category "Electronics")}}selected{{/if}}>Electronics</option>
            <option value="Notes" {{#if (eq product.category "Notes")}}selected{{/if}}>Notes</option>
            <option value="Stationery" {{#if (eq product.category "Stationery")}}selected{{/if}}>Stationery</option>
            <option value="Flashcards" {{#if (eq product.category "Flashcards")}}selected{{/if}}>Flashcards</option>
          </select>
        </div>


        <div>
          <label for="price">Price</label>
          <input name="price" id="price" type="number" step="0.01" required value="{{product.price}}">
        </div>

        <div>
          <label for="stock">Stock</label>
          <input name="stock" id="stock" type="number" step="1" required value="{{product.stock}}">
        </div>

        <div>
          <label for="imageUrl">Image URL</label>
          <input name="imageUrl" id="imageUrl" value="{{product.imageUrl}}">
        </div>

        <div class="btn-group">
          <button type="submit">{{#if product._id}}Update{{else}}Create{{/if}}</button>
          <a href="/seller/products" class="btn-secondary">Cancel</a>
        </div>
      </form>
    </div>

    <div class="btn-back">
      <a href="/" style="text-decoration: none;">
        <button>Back to Marketplace</button>
      </a>
    </div>
  </div>
</body>
</html>
