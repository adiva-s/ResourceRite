<!-- views/cart.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Your Cart</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }
        .container {
            width: 80%;
            margin: 60px auto;
            padding: 20px;
            background: white;
            border-radius: 10px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #e0e0e0;
        }
        button {
            font-family: 'Poppins', sans-serif;
        }
        .checkout-button, .clear-cart-button {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #2a6fd7;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: transform 0.2s;
        }
        .checkout-button:hover, .clear-cart-button:hover {
            transform: scale(1.05);
        }
        .quantity-controls {
            display: flex;
            gap: 5px;
            align-items: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="back-button" style="margin-bottom: 20px;">
    <a href="/" style="text-decoration: none;">
        <button style="
            padding: 10px 15px; 
            background-color: #2a6fd7; 
            color: white; 
            border: none; 
            border-radius: 5px; 
            cursor: pointer;
            font-family: 'Poppins', sans-serif;
            transition: transform 0.2s;
        ">Back to Marketplace</button>
    </a>
</div>

        <h1>Your Cart</h1>

        {{#if products.length}}
            <form action="/cart/clear" method="POST">
                <button type="submit" class="clear-cart-button">Clear Cart</button>
            </form>

            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="cart-items">
                    {{#each products}}
                    <tr data-product-id="{{this.id}}">
                        <td>{{this.name}}</td>
                        <td>${{this.price}}</td>
                        <td>
                            <div class="quantity-controls">
                                <button class="decrease-btn">-</button>
                                <span class="quantity">{{this.quantity}}</span>
                                <button class="increase-btn">+</button>
                            </div>
                        </td>
                        <td>
                            <button class="delete-btn">üóëÔ∏è Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

            <div style="text-align: left margin-top: 20px;">
                <p>Subtotal: ${{subtotal}}</p>
                <p>Tax (7%): ${{tax}}</p>
                <h2>Total: $<span id="total-price">{{totalPrice}}</span></h2>
            </div>


            <form action="/checkout" method="POST">
                <button type="submit" class="checkout-button">Checkout</button>
            </form>
        {{else}}
            <p>Your cart is empty.</p>
        {{/if}}
    </div>
</body>

<script>
    async function updateCart(productId, action) {
        const response = await fetch(`/cart/${productId}/${action}`, {
            method: 'POST'
        });

        if (response.ok) {
            const data = await response.json();
            if (data.quantity !== undefined) {
                document.querySelector(`[data-product-id="${productId}"] .quantity`).textContent = data.quantity;
            }

            document.getElementById("total-price").textContent = data.totalPrice;

            if (data.quantity === 0) {
                document.querySelector(`[data-product-id="${productId}"]`).remove();
            }
        }
    }

    document.querySelectorAll('.increase-btn').forEach(button => {
        button.addEventListener('click', (e) => {
            e.preventDefault();
            const productId = e.target.closest('tr').dataset.productId;
            updateCart(productId, 'increase');
        });
    });

    document.querySelectorAll('.decrease-btn').forEach(button => {
        button.addEventListener('click', (e) => {
            e.preventDefault();
            const productId = e.target.closest('tr').dataset.productId;
            updateCart(productId, 'decrease');
        });
    });

    document.querySelectorAll('.delete-btn').forEach(button => {
        button.addEventListener('click', (e) => {
            e.preventDefault();
            const productId = e.target.closest('tr').dataset.productId;
            updateCart(productId, 'remove');
        });
    });
</script>


</html>
